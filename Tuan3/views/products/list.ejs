<%- include("../layouts/header", { title: "Products" }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Products</h3>
  <% if (user.role === "admin") { %>
    <a href="/products/add" class="btn btn-primary">+ Add Product</a>
  <% } %>
</div>

<form class="row g-2 mb-3">
  <div class="col-md-3">
    <input class="form-control" name="q" placeholder="Search name" value="<%= filters.q || '' %>">
  </div>

  <div class="col-md-3">
    <select class="form-select" name="categoryId">
      <option value="">All Categories</option>
      <% categories.forEach(c => { %>
        <option value="<%= c.categoryId %>" <%= filters.categoryId === c.categoryId ? "selected" : "" %>>
          <%= c.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="col-md-2">
    <input class="form-control" name="minPrice" type="number" placeholder="Min price" value="<%= filters.minPrice || '' %>">
  </div>

  <div class="col-md-2">
    <input class="form-control" name="maxPrice" type="number" placeholder="Max price" value="<%= filters.maxPrice || '' %>">
  </div>

  <div class="col-md-2">
    <button class="btn btn-secondary w-100">Filter</button>
  </div>
</form>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-dark">
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Status</th>
          <% if (user.role === "admin") { %>
            <th class="text-end">Actions</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% if (!products.length) { %>
          <tr><td colspan="6" class="text-center text-muted py-4">No products</td></tr>
        <% } %>

        <% products.forEach(p => { %>
          <tr>
            <td>
              <% if (p.url_image) { %>
                <img src="<%= p.url_image %>" style="width:60px;height:60px;object-fit:cover;border-radius:8px">
              <% } else { %>
                <span class="text-muted">No image</span>
              <% } %>
            </td>
            <td><%= p.name %></td>
            <td>$<%= p.price %></td>
            <td><%= p.quantity %></td>
            <td>
              <% if (p.quantity === 0) { %>
                <span class="badge bg-danger">Out</span>
              <% } else if (p.quantity < 5) { %>
                <span class="badge bg-warning text-dark">Low</span>
              <% } else { %>
                <span class="badge bg-success">In stock</span>
              <% } %>
            </td>

            <% if (user.role === "admin") { %>
              <td class="text-end">
                <a href="/products/<%= p.id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                <form method="post" action="/products/<%= p.id %>/delete"
                      class="d-inline"
                      onsubmit="return confirm('Soft delete product?')">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<% if (nextKey) { %>
  <form class="mt-3">
    <input type="hidden" name="q" value="<%= filters.q || '' %>">
    <input type="hidden" name="categoryId" value="<%= filters.categoryId || '' %>">
    <input type="hidden" name="minPrice" value="<%= filters.minPrice || '' %>">
    <input type="hidden" name="maxPrice" value="<%= filters.maxPrice || '' %>">
    <input type="hidden" name="lastKey" value='<%= nextKey %>'>
    <button class="btn btn-outline-primary">Load more</button>
  </form>
<% } %>

<%- include("../layouts/footer") %>
