<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .product-image {
      width: 150px;
      height: auto;
      margin-bottom: 15px;
    }
    .product-item {
      border: 1px solid #ddd;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center mb-5">DANH SÁCH SẢN PHẨM</h1>
    <a href="/create" class="btn btn-primary mb-4">Thêm sản phẩm</a>

    <div class="row">
      <% products.forEach(p => { %>
        <div class="col-md-4">
          <div class="product-item">
            <img src="<%= p.url_image %>" alt="<%= p.name %>" class="product-image img-fluid rounded">
            <h5><%= p.name %></h5>
            <p><b>Giá:</b> <%= p.price %></p>
            <a href="/edit/<%= p.id %>" class="btn btn-warning btn-sm"> Chỉnh sửa</a>
            <a href="/delete/<%= p.id %>" class="btn btn-danger btn-sm"> Xóa</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
