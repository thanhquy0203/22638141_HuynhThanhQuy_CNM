<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
  <style>
    body { font-family: Arial; padding: 40px }
    img { width: 100px }
    table { border-collapse: collapse; width: 100% }
    th, td { border: 1px solid #ccc; padding: 10px }
  </style>
</head>
<body>
  <h1>Product List</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
    </tr>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td>
          <img src="<%= p.url_image %>" />
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
