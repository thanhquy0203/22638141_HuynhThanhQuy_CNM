<%- include("../layouts/header", { title: "Edit Product" }) %>

<div class="card shadow-sm border-0">
  <div class="card-body p-4">
    <h4 class="mb-3">EDIT PRODUCT #<%= product.id %></h4>
    <form method="post" action="/products/<%= product.id %>/edit">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" name="name" value="<%= product.name %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Price</label>
        <input class="form-control" name="price" type="number" step="0.01" value="<%= product.price %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input class="form-control" name="quantity" type="number" value="<%= product.quantity %>" required>
      </div>
      <button class="btn btn-primary">Update</button>
      <a class="btn btn-light" href="/products">Cancel</a>
    </form>
  </div>
</div>

<%- include("../layouts/footer") %>
